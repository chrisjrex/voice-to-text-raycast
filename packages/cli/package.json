{
  "name": "@vtt/cli",
  "version": "1.0.0",
  "description": "Voice-to-Text CLI tool (self-contained with bundled runtime)",
  "main": "dist/index.js",
  "bin": {
    "vtt": "./dist/index.js"
  },
  "files": [
    "dist",
    "assets"
  ],
  "scripts": {
    "build": "tsc",
    "build:binary": "npm run build && npm run build:bundle-runtime && pkg . --out-path=bin",
    "build:bundle-runtime": "node scripts/bundle-runtime.js",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts"
  },
  "pkg": {
    "scripts": [
      "dist/**/*.js"
    ],
    "assets": [
      "assets/**/*",
      "dist/runtime.tar.gz"
    ],
    "targets": [
      "node18-macos-arm64"
    ],
    "outputPath": "bin"
  },
  "keywords": [
    "voice",
    "speech",
    "tts",
    "stt",
    "cli",
    "local",
    "bundled"
  ],
  "author": "rex",
  "license": "MIT",
  "dependencies": {
    "@vtt/core": "^1.0.0",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "pkg": "^5.8.1",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
